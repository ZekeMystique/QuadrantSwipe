<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:background="@drawable/text_back"
        android:layout_weight="0.25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Acuity Keyboard. Don&apos;t forget to change your keyboard settings to use our service. Test it out in other applications as well. Enjoy!"
        android:id="@+id/textView"
        android:layout_weight=".65" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program made by Rohan Dawson, Justin Hockenberry, and Zeke Moreland for CSCI 3320 under Dr. Robert Senser. 2015"
        android:id="@+id/textView2"
        android:layout_weight="0.10" />

</LinearLayout>