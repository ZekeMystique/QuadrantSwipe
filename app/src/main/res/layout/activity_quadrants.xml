<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Quadrants"
    android:background="#cae8f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Z   C\n\nQ   B"
        android:lines = "3"
        android:typeface = "monospace"
        android:background="#cae8f5"
        android:id="@+id/topLeft"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="D   U\n\nH   L"
        android:lines = "3"
        android:typeface = "monospace"
        android:background="#cae8f5"
        android:id="@+id/topRight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A   E\n\nI   O"
        android:lines = "3"
        android:typeface = "monospace"
        android:background="#cae8f5"
        android:id="@+id/botLeft"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="T   N\n\nS   R"
        android:lines = "3"
        android:typeface = "monospace"
        android:background="#cae8f5"
        android:id="@+id/botRight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sample Text goes here."
        android:id="@+id/outputText"
        android:textSize="30sp"
        android:background="@drawable/text_back"
        android:typeface = "monospace"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spacebar"
        android:id="@+id/space"
        android:layout_alignBottom="@+id/botLeft"
        android:layout_centerHorizontal="true"
        android:onClick="onSpaceClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:id="@+id/del"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/space"
        android:layout_toEndOf="@+id/space"
        android:onClick="onDelClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ^ "
        android:id="@+id/shift"
        android:layout_alignBottom="@+id/botLeft"
        android:layout_toLeftOf="@+id/space"
        android:layout_toStartOf="@+id/space"
        android:onClick="onShiftClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RET"
        android:id="@+id/enter"
        android:onClick="onEnterClick"
        android:layout_above="@+id/del"
        android:layout_toRightOf="@+id/space"
        android:layout_toEndOf="@+id/space" />




    <requestFocus/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numbers"
        android:id="@+id/numbersButton"
        android:layout_above="@+id/space"
        android:layout_alignLeft="@+id/shift"
        android:layout_alignStart="@+id/shift"
        android:paddingLeft="59dp"
        android:paddingRight="59dp"
        android:onClick="onNumbersClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letters"
        android:id="@+id/lettersButton"
        android:layout_alignTop="@+id/topLeft"
        android:onClick="onLettersClick"
        android:layout_alignLeft="@+id/numbersButton"
        android:layout_alignStart="@+id/numbersButton"
        android:layout_alignRight="@+id/enter"
        android:layout_alignEnd="@+id/enter" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/slim_arrow_up"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/topLeft"
        android:layout_alignRight="@+id/topLeft"
        android:layout_alignEnd="@+id/topLeft"
        android:paddingLeft="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/slim_arrow_up"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/topRight"
        android:layout_alignLeft="@+id/topRight"
        android:layout_alignStart="@+id/topRight"
        android:paddingRight="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@drawable/slim_arrow_down"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/botLeft"
        android:layout_alignEnd="@+id/botLeft"
        android:layout_alignTop="@+id/botLeft"
        android:paddingLeft="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@drawable/slim_arrow_down"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8"
        android:layout_alignTop="@+id/botRight"
        android:paddingRight="2dp" />


</RelativeLayout>
